@inherits FluentComponentBase

<FluentStack Class="body-stack" Orientation="Orientation.Horizontal" Width="100%">
    <FluentBodyContent id="body-content" Style="height: calc(100dvh - 90px);">
        <div class="content">
            <article id="article">
                @Body
            </article>
            <aside>
                <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
                    <div>
                    <FluentIcon Value="@(new ViewGraphic.Topic.TechAndTools())" Color="Color.FillInverse" Width="100%" />
                    </div>
                    <img src="img/technologies.svg" />
                </FluentStack>
                <GenericGoTopButton />
            </aside>
        </div>
    </FluentBodyContent>
</FluentStack>