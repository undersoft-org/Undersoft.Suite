@inherits FluentComponentBase

@typeparam TMenu where TMenu : class, IOrigin, IInnerProxy

<FluentStack Class="body-stack" Orientation="Orientation.Horizontal" Width="100%" HorizontalGap="0" Style="@Style">

    <GenericNavMenu TMenu="TMenu" Style="min-width:40px; padding:0px;" Width="180">
        <GenericNavExpander TMenu="TMenu" IconColor="Color.Accent" Style="height:100%;" />
    </GenericNavMenu>

    <FluentBodyContent id="body-content" Style="height: calc(100dvh - 80px);">

            <article id="article">
                @Body
            </article>
            
            @*
            <aside>
            <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
            </FluentStack>
            </aside> *@

            <FluentSpacer />

            <GenericGoTopButton />

    </FluentBodyContent>

</FluentStack>