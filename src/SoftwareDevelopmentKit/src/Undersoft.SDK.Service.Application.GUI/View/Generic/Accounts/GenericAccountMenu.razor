@using System.ComponentModel.DataAnnotations
@using FluentValidation
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK
@using Undersoft.SDK.Invoking
@using Undersoft.SDK.Service.Access;

@typeparam TModel where TModel : class, IOrigin, IInnerProxy, IAuthorization
@typeparam TValidator where TValidator : class, IValidator<IViewData<TModel>>

@inherits ViewItem

<CascadingValue Value="@Data">
    <CascadingValue Value="@Root">
        <CascadingValue Value="@NavigationManager">
            <FluentMenu UseMenuService="false" @bind-Open="@IsOpen" Style="@Style" Anchor="@AnchorId" Trigger="@Trigger" Anchored="@Anchored" HorizontalPosition="Position" Width="100px" @ref="@Reference">
                <CascadingValue Value="@IsOpen">
                    @foreach (var rubric in Data.ExtendedRubrics)
                    {
                        <GenericMenuItem Rubric="@rubric" Parent="@this" />
                    }
                </CascadingValue>
            </FluentMenu>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>


