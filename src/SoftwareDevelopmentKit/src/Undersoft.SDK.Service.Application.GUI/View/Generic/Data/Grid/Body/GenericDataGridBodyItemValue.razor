@using System.ComponentModel.DataAnnotations
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK;
@using Undersoft.SDK.Service.Application.GUI.View.Abstraction

@inherits ViewItem

<FluentDataGridCell GridColumn=@_ordinal Class="@(Rubric.Class + (Multiline ? "multiline-text" : ""))" Style="@("align-items:center;" + Rubric.Style)" @key="@ViewId" TGridItem="string" title="@Rubric.RubricName" aria-label="@Rubric.RubricName">
    <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center" Width="100%" Style="height:100%">
        <GenericValue Rubric="@Rubric" Width="100%" />
    </FluentStack>
</FluentDataGridCell>




