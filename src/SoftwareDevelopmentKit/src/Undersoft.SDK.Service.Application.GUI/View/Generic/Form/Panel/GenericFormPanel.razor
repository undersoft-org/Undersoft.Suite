@using System.ComponentModel.DataAnnotations
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK;

@inherits GenericDialog<TModel>

@typeparam TModel where TModel : class, IOrigin, IInnerProxy
@typeparam TValidator where TValidator : class, IValidator<IViewData<TModel>>

@implements IDialogContentComponent<IViewData<TModel>>
@implements IView


<CascadingValue Value="@Content">
    <CascadingValue Value="Form">
        <!-- Header -->
        <GenericFormPanelHeader TModel="TModel" />

        <!-- Body -->
        <GenericFormPanelBody TValidator="TValidator" TModel="TModel" />

        <!-- Footer -->
        <GenericFormPanelFooter TModel="TModel" />

    </CascadingValue>
</CascadingValue>