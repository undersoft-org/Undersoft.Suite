@using System.ComponentModel.DataAnnotations

@inherits GenericDialog<TModel>

@typeparam TModel where TModel : class, IOrigin, IInnerProxy
@typeparam TValidator where TValidator : class, IValidator<IViewData<TModel>>

@implements IDialogContentComponent<IViewData<TModel>>
@implements IView


<CascadingValue Value="@Content">
    <CascadingValue Value="@Form">
        <!-- Header -->
    <GenericFormTabsHeader TModel="TModel" />

    <!-- Body -->
    <GenericFormTabsBody TValidator="TValidator" Orientation="@Orientation" TModel="TModel" EntryMode="@EntryMode" />

    <!-- Footer -->
    <GenericFormTabsFooter TModel="TModel" />

    </CascadingValue>
</CascadingValue>


@code
{
    [Parameter]
    public Orientation Orientation { get; set; } = Orientation.Vertical;
}