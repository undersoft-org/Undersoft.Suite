@inherits ViewItem<TModel>

@typeparam TModel where TModel : class, IOrigin, IInnerProxy
@typeparam TValidator where TValidator : class, IValidator<IViewData<TModel>>

@implements IDialogContentComponent<IViewData<TModel>>
@implements IView


<CascadingValue Value="@Content">
    <CascadingValue Value="Form">
        <!-- Header -->
        <GenericFormDialogHeader TModel="TModel" />

        <!-- Body -->
        <GenericFormDialogBody TValidator="TValidator" TModel="TModel" Orientation="@Orientation"/>

        <!-- Footer -->
        <GenericFormDialogFooter TModel="TModel" />
    </CascadingValue>
</CascadingValue>

@code
{
    public IViewItem Form => this;

    [CascadingParameter]
    public FluentDialog Dialog { get; set; } = default!;

    protected override void OnInitialized()
    {
        Content.View = this;
        base.OnInitialized();
    }

    [Parameter]
    public Orientation Orientation { get; set; } = Orientation.Vertical;
}
